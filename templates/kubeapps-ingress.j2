{% if kube_ingress_type == "traefik" %}
---
apiVersion: traefik.io/v1alpha1
kind: Middleware
metadata:
  namespace: kubeapps
  name: read-timeout
spec:
  timeout:
    response: 600s
{% endif %}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: kubeapps
  name: kubeapps
  annotations:
      {% if kube_ingress_type == "traefik" %}
      traefik.ingress.kubernetes.io/router.middlewares: kubeapps-read-timeout@kubernetescrd
      {% endif %}
      {% if kube_ingress_type == "nginx" %}
      nginx.ingress.kubernetes.io/proxy-read-timeout: "600"
      {% endif %}
{% if kube_cert_manager %}
      cert-manager.io/cluster-issuer: "letsencrypt-prod"
{% if kube_cert_manager_challenge == 'dns01' %}
    certmanager.k8s.io/acme-challenge-type: dns01
    certmanager.k8s.io/acme-dns01-provider: route53
{% endif %}
{% endif %}
spec:
{% if kube_cert_manager %}
  tls:
  - hosts:
    - {{ public_hostname }}
{% if kube_cert_manager_wildcard_cert_dns_name == '' %}
    secretName: {{ public_hostname }}
{% endif %}
{% endif %}
  rules:
{% if kube_cert_manager %}
  - host: {{ public_hostname }}
    http:
{% else %}
  - http:
{% endif %}
      paths:
      - backend:
          service:
            name: kubeapps
            port:
              number: 80
        pathType: Prefix
        path: /kubeapps