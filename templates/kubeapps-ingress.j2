---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  namespace: kubeapps
  name: kubeapps
  annotations:
      kubernetes.io/ingress.class: nginx
      nginx.ingress.kubernetes.io/proxy-read-timeout: "600"
{% if kube_cert_manager %}
      cert-manager.io/cluster-issuer: "letsencrypt-prod"
{% if kube_cert_manager_challenge == 'dns01' %}
    certmanager.k8s.io/acme-challenge-type: dns01
    certmanager.k8s.io/acme-dns01-provider: route53
{% endif %}
{% endif %}
spec:
{% if kube_cert_manager and kube_public_dns_name != "" %}
  tls:
  - hosts:
    - {{ kube_public_dns_name }}
{% if kube_cert_manager_wildcard_cert_dns_name == '' %}
    secretName: {{ kube_public_dns_name }}
{% endif %}
{% endif %}
  rules:
{% if kube_cert_manager %}
  - host: {{ kube_public_dns_name }}
    http:
{% else %}
  - http:
{% endif %}
      paths:
      - backend:
          service:
            name: kubeapps
            port:
              number: 80
        pathType: Prefix
        path: /kubeapps