{% if kube_ingress_type == "traefik" %}
# Generate a generic certificate to assure that the secret is created
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  namespace: traefik
  name: default-tls
spec:
  secretName: default-tls
  issuerRef:
    kind: ClusterIssuer
    name: selfsigned
  commonName: default
{% endif %}
{% if kube_ingress_type == "nginx" %}
# First generate a selfsigned certificate to assure that the secret is created
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  namespace: nginx-gateway
  name: {{ kube_public_dns_name }}-tls
spec:
  secretName: {{ kube_public_dns_name }}-tls
  issuerRef:
    kind: ClusterIssuer
    name: selfsigned
  dnsNames:
    - "{{ kube_public_dns_name }}"
# Then rewrite it with the prod issuer
---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  namespace: nginx-gateway
  name: {{ kube_public_dns_name }}-tls
spec:
  secretName: {{ kube_public_dns_name }}-tls
  issuerRef: 
    kind: ClusterIssuer
    name: letsencrypt-prod
  dnsNames:
    - "{{ kube_public_dns_name }}"
{% endif %}