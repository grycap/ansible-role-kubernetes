nginx:
  service:
    type:  NodePort
    externalTrafficPolicy: Cluster
    nodePorts:
     - port: 80
       listenerPort: 80
     - port: 443
       listenerPort: 443

gateways:
  - name: nginx-gateway
    namespace: default
    spec:
      gatewayClassName: nginx
      listeners:
        - name: http
          port: 80
          protocol: HTTP
          allowedRoutes:
            namespaces:
              from: All
        - name: https
          port: 443
          protocol: HTTPS
          allowedRoutes:
            namespaces:
              from: All

